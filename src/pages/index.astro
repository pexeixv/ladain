---
import BaseLayout from "@/components/BaseLayout.astro";
const hymns = await Astro.glob("../pages/*.md");
---

<BaseLayout>
  <div class="bg-black text-white p-8">
    <h1 class="font-black text-5xl">Ladain</h1>
  </div>
  <div class="p-8">
    <ul>
      {
        hymns
          .sort((a, b) => a.frontmatter.order - b.frontmatter.order)
          .map(({ url, frontmatter }) => (
            <li>
              <a href={url}>{frontmatter.title || "Untitled"}</a>
            </li>
          ))
      }
    </ul>
  </div>
</BaseLayout>
