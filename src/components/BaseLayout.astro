---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import "@/tailwind.css";

interface Props {
  title?: string;
}

const { title = "Ladain" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="shortcut icon" href="//gavn.in/fav" type="image/x-icon" />
  </head>
  <body class="bg-gray-200">
    <div
      class="min-h-100dvh flex flex-col bg-white container mx-auto max-w-2xl shadow-lg"
    >
      <Header />

      <main class="flex-1">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
