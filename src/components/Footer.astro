---
const { pathname } = Astro.url;
const isHomepage = pathname === "/";
---

{
  !isHomepage && (
    <footer>
      <div class="p-4">
        <a
          href="/"
          class="bg-black text-white uppercase w-full flex justify-center px-8 py-3 items-center gap-1 bg-opacity-100 hover:bg-opacity-85 transition-colors duration-300"
        >
          <i class="fas fa-house relative bottom-0.5" />
          <span>Back to Homepage</span>
        </a>
      </div>
    </footer>
  )
}
